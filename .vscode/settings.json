{
    "files.associations": {
        "*.mdx": "markdown",
        "*.css": "tailwindcss",
        "*.mjs": "javascript",
    },
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 4,
    "editor.quickSuggestions": {
		"strings": "on"
	},
    "[html]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "css.lint.unknownAtRules": "ignore",

    "[css]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "scss.lint.unknownAtRules": "ignore",
    "[scss]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "less.lint.unknownAtRules": "ignore",
    "[less]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    "typescript.format.enable": false,
    "typescript.validate.enable": false,
    "eslint.format.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "[yaml]": {
        "editor.tabSize": 2
    },
    "[php]": {
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": false,
    },
    "[jsonc]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": false,
    },
    "[xml]": {
        "editor.tabSize": 2
    },
    "[sql]": {
        "editor.tabSize": 2
    },
    "cSpell.words": [
        "revalidates"
    ]
}